<div class="container">
    <div class="row">

        <div class="col-md-6 offset-3">


            <h1>Add A Pet</h1>
            <a href="/">Add a Student</a>

            <form action="">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="name" id="name">
                    <input type="number" class="form-control" placeholder="age" id="age">
                    <select class='btn btn-block btn-outline-secondary' name="weight" id="weight">
                        <option value="5">5</option>
                        <option value="10">10</option>
                        <option value="15">15</option>
                        <option value="20">20</option>
                    </select>
                    <select class='btn btn-block btn-outline-secondary' name="coler" id="color">
                        <option value="orange">Orange</option>
                        <option value="black">Black</option>
                        <option value="grey">Grey</option>
                        <option value="tiger">Tiger</option>
                    </select>
                    <br>
                    <button id="submit" class="btn btn-primary">Submit</button>
                </div>
        </div>
    </div>

    <div class="row" id='PetList'>

    </div>
</div>